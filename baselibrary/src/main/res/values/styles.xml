<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextViewTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>


    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:background">@color/main_dark_content_color</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textColor">@color/main_text_color</item>
    </style>

    <style name="MyDialog" parent="android:style/Theme.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowIsFloating">true</item>
        <!--是否模糊-->
        <!--<item name="android:backgroundDimEnabled">false</item>-->
        <!--&lt;!&ndash;是否去除边框&ndash;&gt;-->
        <!--<item name="android:windowFrame">@null</item>-->
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="style_item_main_tab">
        <item name="android:background">@drawable/fw_tab_bg_normal</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAppearance">@style/CustomTabPageIndicator.Text</item>
        <item name="android:textColor">@color/white</item>
        <!-- tab 的背景-->
        <item name="xf_TabBackground">@drawable/fw_tab_bg_transparent</item>
        <!--导航条的颜色-->
        <item name="xf_TabIndicatorColor">@color/white</item>
        <!--每个 Tab 之间的分割线颜色-->
        <item name="xf_TabDividerColor">#00000000</item>
        <!--伸缩情况，如果为真，每个 tab 都是相同的 weight，默认是 false-->
        <item name="xf_TabShouldExpand">false</item>
        <!--每个 Tab 的左右 padding-->
        <item name="xf_TabPaddingLeftRight">8dp</item>
        <!--绘制模式，text 或者 normal，用于是否将下划线绘制为跟随 TextView-->
        <item name="xf_TabDrawMode">text</item>
        <!--你所选择的那个 tab 的颜色-->
        <item name="xf_TabTextSelectColor">@color/white</item>
        <!--Tab 底部下划线的高度-->
        <item name="xf_TabUnderlineHeight">0dp</item>
        <!--Tab 分割线的 padding-->
        <item name="xf_TabDividerPadding">10dp</item>
        <!--导航条的高度-->
        <item name="xf_TabIndicatorHeight">2dp</item>
    </style>

    <style name="CustomTabPageIndicator.Text" parent="android:TextAppearance.Medium">
        <item name="android:typeface">monospace</item>
    </style>
</resources>