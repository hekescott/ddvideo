<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/top_class_root_view"
    android:layout_width="wrap_content"
    android:layout_height="50dp">

    <RelativeLayout
        android:id="@+id/top_class_back_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">
        <ImageView
            android:id="@+id/top_class_back_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/top_title_bg"
            android:layout_marginLeft="8dp"
            android:layout_alignBottom="@id/top_class_name_view"
            />
        <TextView
            android:id="@+id/top_class_name_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:textColor="@drawable/tag_text_color"
            android:textSize="@dimen/txt_16" />
    </RelativeLayout>
</RelativeLayout>