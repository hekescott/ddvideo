<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="-4dp"
    android:layout_marginEnd="-4dp"
    android:layout_marginBottom="6dp"
    android:background="@color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="@mipmap/mine_info_bg"
        android:orientation="vertical">

        <!--头像等-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@color/transparent">

            <!--等级-->
            <RelativeLayout
                android:id="@+id/redeem_code_layout"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="22dp"
                android:layout_marginRight="6.5dp"
                android:background="@mipmap/login_recharge"
                android:paddingStart="12dp"
                android:paddingEnd="12dp">
                <!--<ImageView-->
                <!--android:id="@+id/vip_view"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:layout_marginLeft="7dp"-->
                <!--android:src="@mipmap/vip_new"/>-->
                <TextView
                    android:id="@+id/redeem_code_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="4dp"
                    android:textColor="@color/main_text_color"
                    android:textSize="@dimen/txt_14" />
            </RelativeLayout>

            <!--等级-->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="22dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp">
                <!--<ImageView-->
                <!--android:id="@+id/vip_view"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:layout_marginLeft="7dp"-->
                <!--android:src="@mipmap/vip_new"/>-->
                <TextView
                    android:id="@+id/level_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="16dp"
                    android:background="@mipmap/login_reg"
                    android:textColor="#fea276"
                    android:textSize="@dimen/txt_14" />
            </RelativeLayout>
        </RelativeLayout>

        <!--手机号码-->
        <RelativeLayout
            android:id="@+id/touch_login_view"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="4dp">

            <RelativeLayout
                android:id="@+id/mine_master_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <TextView
                    android:id="@+id/mine_phone_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text=""
                    android:textColor="#7d808e"
                    android:textSize="@dimen/txt_14"
                    tools:text="sdfs"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/mine_nomal_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="invisible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="看官大人请登录"
                    android:textColor="#7d808e"
                    android:textSize="@dimen/txt_18"/>
            </RelativeLayout>
        </RelativeLayout>
        <!--广告语-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:text="看广告、推广可增加更多次数哦～"
            android:textColor="@color/gray_color"
            android:textSize="@dimen/txt_13"/>

        <!--底部-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginBottom="6dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/mine_times_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:text="0/10"
                    android:textColor="@color/text_pink_color"
                    android:textSize="@dimen/txt_25"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"
                    android:text="今日剩余观影次数"
                    android:textColor="@color/gray_color"
                    android:textSize="@dimen/txt_11"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/tuigunang_view"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/next_level_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:text="100%"
                    android:textColor="#fea276"
                    android:textSize="@dimen/txt_25"
                    android:visibility="invisible"/>

                <ImageView
                    android:id="@+id/next_level_img_view"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:src="@mipmap/ic_level1_s"/>

                <TextView
                    android:id="@+id/ccExNum_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"
                    android:text="下一等级还差1人"
                    android:textColor="@color/gray_color"
                    android:textSize="@dimen/txt_11"/>

            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>


    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/u_image_view"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_head_l"
        app:riv_border_width="0dp"
        app:riv_corner_radius="5dp"
        app:riv_mutate_background="true"
        app:riv_oval="true"
        app:riv_tile_mode="clamp"/>
</RelativeLayout>