<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <ImageView
        android:id="@+id/notice_img_view"
        android:layout_marginStart="12dp"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:src="@mipmap/user_notice"/>

    <LinearLayout
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/notice_img_view"
        android:layout_width="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/notice_back_view"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="8dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginEnd="5dp"
                android:layout_toStartOf="@+id/notice_time_view"
                android:id="@+id/notice_title_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="无法播放下载"
                android:textSize="@dimen/txt_16"
                android:textColor="@color/black_color"
                />
            <TextView
                android:layout_marginEnd="10dp"
                android:layout_alignParentEnd="true"
                android:id="@+id/notice_time_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2018-06-13"
                android:textSize="@dimen/txt_15"
                android:textColor="@color/gray_color"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/notice_content_view"
            android:layout_marginEnd="10dp"
            android:layout_below="@+id/notice_back_view"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="尊敬的用户您好！如果您在使用视频在线的时候"
            android:layout_marginBottom="10dp"
            android:textSize="@dimen/txt_14"
            android:textColor="@color/gray_color"
            />

    </LinearLayout>

    <View
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/fenggexian">

    </View>

</RelativeLayout>
