<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="40dp">
    <ImageView
        android:id="@+id/more_left_view"
        android:layout_marginStart="10dp"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/title_left_laber">

    </ImageView>
    <TextView
        android:id="@+id/more_text_view"
        android:layout_marginStart="6dp"
        android:layout_toEndOf="@+id/more_left_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_black_color"
        android:textSize="@dimen/txt_15"
        android:textStyle="bold"
        android:text="最新片源"
        android:layout_centerVertical="true"
        />
    <RelativeLayout
        android:id="@+id/more_back_view"
        android:layout_centerVertical="true"
        android:layout_marginEnd="11dp"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/more_txt_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更多"
            android:textSize="@dimen/txt_14"
            android:textColor="@color/text_tips_color"
            android:layout_centerVertical="true"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@mipmap/right"
            android:layout_toEndOf="@+id/more_txt_view"
            android:layout_marginStart="8dp"/>
    </RelativeLayout>

</RelativeLayout>