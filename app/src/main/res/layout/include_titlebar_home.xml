<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/transparent"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:layout_centerVertical="true"
        android:background="@mipmap/logo" />

    <RelativeLayout
        android:id="@+id/home_search_back_view"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:layout_toRightOf="@id/iv_logo"
        android:layout_toLeftOf="@id/home_search_right_view"
        android:background="@drawable/home_search_corners">

        <EditText
            android:id="@+id/home_edit_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/home_seach_img_view"
            android:background="@color/transparent"
            android:drawablePadding="6dp"
            android:focusable="false"
            android:gravity="center|left"
            android:hint="输入关键词查找片源"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="@color/gray_color"
            android:textSize="@dimen/txt_16" />

        <ImageView
            android:id="@+id/home_seach_img_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:src="@mipmap/search_white" />

        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/home_seach_img_view"
            android:background="#30ffffff" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/home_search_right_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp">
        <RelativeLayout
            android:id="@+id/home_history_view_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="5dp"
            >

            <ImageView
                android:id="@+id/home_history_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="4dp"
                android:src="@mipmap/h_history_yellow" />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/home_down_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/home_history_view_back"
            android:layout_centerVertical="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="4dp"
                android:src="@mipmap/h_download_yellow" />

        </RelativeLayout>




    </RelativeLayout>

</RelativeLayout>