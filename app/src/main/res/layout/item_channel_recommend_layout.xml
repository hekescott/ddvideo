<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="310dp"
    android:layout_height="wrap_content"
    android:paddingBottom="15dp">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/home_white_corners"
        >


            <com.android.baselibrary.widget.RoundImageView
                android:id="@+id/user_img_view"
                android:layout_width="90dp"
                android:layout_height="120dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:scaleType="fitXY"
                app:corner_radius="5dp" />



        <TextView
            android:id="@+id/describe"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="60dp"
            android:layout_alignParentRight="true"
            android:ellipsize="end"
            android:lines="2"
            tools:text="简介简介简介简介简介简介简介简介简介简介简介简介简介简介简介简介简介简介简介简介简介简介简介简介简介简介简介简介简介简介简介简介简介简介简介简介简介简介" />

        <TextView
            android:id="@+id/introduce"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/describe"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_alignParentEnd="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/gray_color"
            android:textSize="@dimen/txt_13"
            tools:text="简介简介简介简介简介简介简介简介简介简介简介简介简介简介简介简介简介简介简介简介简介简介简介简介简介简介简介简介简介简介简介简介简介简介简介简介简介简介" />


        <TextView
            android:id="@+id/chooseBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:background="@mipmap/chose_video"
            android:layout_below="@id/introduce"
            android:layout_marginBottom="10dp"
            android:layout_alignParentRight="true"
            android:text="            "
            android:textColor="@color/white" />
    </RelativeLayout>

    <TextView
        android:id="@+id/user_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="10dp"
        android:background="@mipmap/user_name_bg"
        android:gravity="right|center_vertical"
        android:paddingEnd="10dp"
        android:text="姓名"
        android:textColor="@color/white"
        android:textSize="@dimen/txt_16" />
</RelativeLayout>