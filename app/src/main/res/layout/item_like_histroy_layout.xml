<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="104dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/lh_img_view"
        android:layout_width="134dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:scaleType="fitXY"
        android:layout_toRightOf="@+id/check_button"
        android:background="@drawable/video_borders"
        tools:ignore="RtlHardcoded" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="14dp"
        android:layout_toEndOf="@+id/lh_img_view"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lh_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="2"
            android:textColor="@color/black_color"
            android:textSize="@dimen/txt_18" />

        <TextView
            android:id="@+id/lh_count_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textColor="@color/gray_color" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/check_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="5dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/check_img_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="false"
            android:layout_margin="5dp"
            android:src="@mipmap/icon_uncheck" />

    </RelativeLayout>


</RelativeLayout>